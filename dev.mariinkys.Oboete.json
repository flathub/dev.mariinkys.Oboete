{
    "app-id": "dev.mariinkys.Oboete",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "23.08",
    "sdk": "org.freedesktop.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "oboete",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=network"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin"
    },
    "modules": [
        {
            "name": "oboete",
            "buildsystem": "simple",
            "build-options": {
                "env": {
                    "CARGO_HOME": "/run/build/oboete/cargo"
                }
            },
            "build-commands": [
                "cargo --offline fetch --manifest-path Cargo.toml --verbose",
                "cargo --offline build --release --verbose",
                "install -Dm0755 ./target/release/oboete /app/bin/oboete",
                "install -Dm0644 ./res/dev.mariinkys.Oboete.desktop /app/share/applications/dev.mariinkys.Oboete.desktop",
                "install -Dm0644 ./res/dev.mariinkys.Oboete.metainfo.xml /app/share/metainfo/dev.mariinkys.Oboete.metainfo.xml",
                "install -Dm0644 ./res/icons/hicolor/16x16/apps/dev.mariinkys.Oboete.svg /app/share/icons/hicolor/16x16/apps/dev.mariinkys.Oboete.svg",
                "install -Dm0644 ./res/icons/hicolor/24x24/apps/dev.mariinkys.Oboete.svg /app/share/icons/hicolor/24x24/apps/dev.mariinkys.Oboete.svg",
                "install -Dm0644 ./res/icons/hicolor/32x32/apps/dev.mariinkys.Oboete.svg /app/share/icons/hicolor/32x32/apps/dev.mariinkys.Oboete.svg",
                "install -Dm0644 ./res/icons/hicolor/48x48/apps/dev.mariinkys.Oboete.svg /app/share/icons/hicolor/48x48/apps/dev.mariinkys.Oboete.svg",
                "install -Dm0644 ./res/icons/hicolor/64x64/apps/dev.mariinkys.Oboete.svg /app/share/icons/hicolor/64x64/apps/dev.mariinkys.Oboete.svg",
                "install -Dm0644 ./res/icons/hicolor/128x128/apps/dev.mariinkys.Oboete.svg /app/share/icons/hicolor/128x128/apps/dev.mariinkys.Oboete.svg",
                "install -Dm0644 ./res/icons/hicolor/256x256/apps/dev.mariinkys.Oboete.svg /app/share/icons/hicolor/256x256/apps/dev.mariinkys.Oboete.svg"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                },
                "cargo-sources.json"
            ]
        }
    ]
}